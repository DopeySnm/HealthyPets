<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/default_card_background">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/fillpetprofile_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/paw_picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fillpetprofile_name_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/fillpetprofile_name"
        android:textAppearance="@style/MainScreenMainTextMiniCards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fillpetprofile_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/fillpetprofile_info_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/info_picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fillpetprofile_imageView"
        app:layout_constraintTop_toBottomOf="@+id/fillpetprofile_name_textView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fillpetprofile_info_button_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/fillpetprofile_info_button"
        android:textAppearance="@style/MainScreenDescriptionText"
        android:textColor="@color/burnt_orange"
        app:layout_constraintBottom_toBottomOf="@+id/fillpetprofile_info_imageView"
        app:layout_constraintStart_toEndOf="@+id/fillpetprofile_info_imageView"
        app:layout_constraintTop_toTopOf="@+id/fillpetprofile_info_imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>
